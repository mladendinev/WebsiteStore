                {{>carouselTemplate carouselStyle="min-height:507px;max-height:507px"}}
            </div>
            <div class="col-xs-8 expand-div" >

                {{#each documents}}
                <div class="col-xs-6 col-md-4">
                    {{#if soldOut size quantity sizes quantitySize}}
                    <a href="#" class="sold-out-container thumbnail">
                    
                        <h2 class = "sold-out-text"> <b> SOLD OUT </b> </h2>
